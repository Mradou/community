<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="adou.community.mapper.QuestionMapper">

    <insert id="save" parameterType="question">
        insert into question (title, description, gmt_create, gmt_modified, creator, tag) values
        (#{title}, #{description}, #{gmt_create}, #{gmt_modified}, #{creator}, #{tag})
    </insert>

    <select id="list" resultType="question" parameterType="int">
        select * from question limit #{offset},#{size}
    </select>

    <select id="totalCount" resultType="int">
        select count(*) from question
    </select>

    <select id="listByUid" resultType="question" parameterType="int">
        select * from question where creator = #{uid} limit #{offset},#{size}
    </select>

    <select id="totalCountByUid" resultType="int">
        select count(1) from question where creator = #{uid}
    </select>

    <select id="getById" parameterType="int" resultType="question">
        select * from question where id = #{id}
    </select>
</mapper>